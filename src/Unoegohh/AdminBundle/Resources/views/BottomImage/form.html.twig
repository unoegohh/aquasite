
<form method="post" class="form-horizontal form-bordered">
    {{ form_widget(form._token) }}
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-email">Название</label>

        <div class="col-md-9">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Ссылка на картинку</label>

        <div class="col-md-9">
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Порядок</label>

        <div class="col-md-9">
            {{ form_widget(form.itemOrder, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Снести картинку вправо</label>

        <div class="col-md-9">
            {{ form_widget(form.toTheRight) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Ссылка куда ведет картинка</label>

        <div class="col-md-9">
            {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Добавить класс для мленьких картинок</label>

        <div class="col-md-9">
            {{ form_widget(form.active) }}
        </div>
    </div>
    <div class="form-group form-actions">
        <div class="col-md-9 col-md-offset-3">
            <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-user"></i> Сохранить
            </button>
        </div>
    </div>
</form>