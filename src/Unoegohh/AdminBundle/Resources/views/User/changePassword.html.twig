{% extends "UnoegohhAdminBundle::layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <div class="header-section">
            <h1>
                Смена пароля
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li><a href="{{ path("unoegohh_admin_homepage") }}">Главная</a></li>
        <li><a href="{{ path("unoegohh_admin_user") }}">Список пользователей</a></li>
        <li>Смена пароля пользователя {{ item.username }}</li>
    </ul>
    <div class="row">
        <div class="col-md-9">
            {% for i in app.session.flashbag.get('notice') %}
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="fa fa-check-circle"></i> {{ i }}</h4>
                </div>
            {% endfor %}
            <div class="block">
                <div class="block-title">
                    <h2><strong>Пользователь {{ item.username }}</strong></h2>
                </div>
                <form method="get" class="form-horizontal form-bordered">

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="pass">Новый пароль</label>

                            <div class="col-md-9">
                                <input type="text" class="form-control" name="pass" required="required"/>
                            </div>
                        </div>

                        <div class="form-group form-actions">
                            <div class="col-md-9 col-md-offset-3">
                                <button type="submit" class="btn btn-sm btn-primary">Сохранить
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>

    </div>
{% endblock %}
